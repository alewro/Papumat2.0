<div id="<%= dom_id recipe %>" class="container mt-3">

  <h3><%= recipe.name %></h3>
  <h6 class="mb-5"><%= recipe.recipe_category.name %></h6>
  
  <p class="mb-5"><%= recipe.description %></p>

  <h6 class="text-center">Produkty</h6>
  <% recipe.products.each do |product| %>
    <div class="row d-flex justify-content-between mb-2">
      <div class="col-8 border border-dark p-1"><%= product.name %></div>
      <div class="col-3 border border-dark p-1 text-center">
        <% if product.quantity % 1 == 0 %>
          <%= product.quantity.to_i%>
        <% else %>
          <%= product.quantity%>
        <% end %>
      </div>
    </div>
  <% end %>

</div>
