<div class="d-flex justify-content-between border-bottom">
  <div class="d-flex justify-content-start ">
    <div>
      <%= link_to edit_shopping_list_path(shopping_list) do %>
        <%= image_tag "#{shopping_list.product_category}.png", class:"icons pt-2" %>
      <% end %>
    </div>
    <div>
      <%= button_to shopping_list.product_name, change_is_bought_path, params: {id: shopping_list.id}, method: :change_is_bought_path, class: class_name %>
    </div>
  </div> 
  <div class="pt-2">
    <% if shopping_list.product_quantity % 1 == 0 %>
      <%= shopping_list.product_quantity.to_i %>
    <% else %>
      <%= shopping_list.product_quantity%>
    <% end %>
  </div>
</div>