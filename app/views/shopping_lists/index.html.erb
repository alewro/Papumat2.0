<div class="container mt-2">
  <h1>Shopping list</h1>
  <div id="myForm" class="myForm">
    <%= render "form", shopping_list: @shopping_list%>
  </div>
  <div id="shopping_lists" class="mb-5">
    <% ShoppingList.all.order(product_category: :asc, product_name: :asc).each do |shopping_list| %>
      <% if shopping_list.is_bought == false %>
        <%= render shopping_list, class_name: "btn" %>
      <% end %>
    <% end %>
    <% ShoppingList.all.order(:product_category).each do |shopping_list| %>
      <% if shopping_list.is_bought == true %>
        <%= render shopping_list, class_name: "btn text-decoration-line-through" %>
      <% end %>
    <% end %>
  </div>
</div>
<%= javascript_include_tag "show_form" %>